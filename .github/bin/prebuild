#! /usr/bin/env bash

panic()
{
	echo "ERROR: $*"
	exit 1
}

if [ -z "$RUNNER_OS" ]; then
	RUNNER_OS=unknown
fi

case "$RUNNER_OS" in
MacOS|macOS)
	os=macos;;
Linux|linux)
	os=ubuntu;;
Windows|windows)
	os=windows;;
*)
	os=unknown;;
esac

cat <<- EOF
================================================================================
OS: $os
================================================================================
EOF
case "$os" in
ubuntu)
	sudo apt-get update || panic "apt-get update failed"
	sudo apt-get install -y libcgal-dev || panic "apt-get install failed"
	;;
macos)
	brew update || panic "brew update failed"
	brew install cgal || panic "brew install failed"
	;;
windows)
	;;
unknown|*)
	;;
esac
